{
  "name": "prueba-tecnica-zurich-backend",
  "version": "1.0.0",
  "description": "Backend API con arquitectura hexagonal usando Node.js, Express y PrismaJS",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "postinstall": "npm run prisma:generate"
  },
  "keywords": [
    "nodejs",
    "express",
    "prisma",
    "hexagonal-architecture",
    "typescript",
    "rest-api"
  ],
  "author": "Luis Lopez",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@types/pg": "^8.15.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "prisma": "^5.4.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
